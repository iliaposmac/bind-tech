
<div>
    <h1>{{title}}</h1> <span>{{article.username}}</span> <span>{{article.time}}</span>
    <h3>{{article.shortDescription:}}</h3>
    <h3>{{article.textContent}}</h3>
</div>


<form action="/blog/{{id}}/comments" method="POST">
    <input type="hidden" name="articleId" value="{{id}}">
    <label for="name">Name</label>
    <input type="text" name="name">
    <label for="comment">Comment</label>
    <input type="text" name="comment">
    <button type="submit">Comment</button>
</form>

{{#if comments}}
    <div>
        <ul id="commentsUl">
            {{#each comments}}
                <p id="comment_{{commentId}}">Name: {{name}} Comment: <span>{{comment}}</span></p>
                {{#if myComment}}
                    <span id="inputComment"><button id="editComment"><a href="/blog/{{commentId}}/edit_comments" data-id={{commentId}}>Edit comment</a></button></span>
                    <span><a href="/blog/{{commentId}}/remove_comment">Remove comment</a></span>
                {{/if}}
            {{/each}}
        </ul>
    </div>
    {{else}}
    <p>There are no comments</p>
{{/if}}

<script src='/js/main.js'></script>