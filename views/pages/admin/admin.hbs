{{#each articles}}
    <div>
        <span>
            <h1 style="display: inline-flex"><a href="/blog/articles/{{id}}">{{title}}   </a></h1>
            <span>  Created by: {{username}} </span>
        </span>
        <h2>{{shortDescription}}</h2>
        <h2>{{textContent}}</h2>
        <form action="/admin/remove/{{id}}" method="POST">
            <input type="hidden" value="{{id}}" name="articleId">
            <button type="submit">Remove article</button>
        </form>
        <button><a href="/blog/my_articles/{{id}}/update">Update article</a></button>
    </div>
{{/each}}

